<h1>New Game</h1>
<ul>
  <%  @letters.each{ |letter| %>
    <li><%= letter %></li>
  <% } %>
</ul>
<p>What is the longest word you can find ?  </p>
<form action="/games/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div id="play-put">
    <input type="text" name="word" id="word">
    <input type="submit" value="Play" id="play">
  </div>
</form>
